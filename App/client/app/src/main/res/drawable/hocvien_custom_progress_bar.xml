<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#D7D7D7"/> <corners android:radius="10dp"/> <stroke android:width="1dp" android:color="#808080"/> </shape>
    </item>

    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape>
                <solid android:color="#4CAF50"/> <corners android:radius="10dp"/> </shape>
        </scale>
    </item>

</layer-list>