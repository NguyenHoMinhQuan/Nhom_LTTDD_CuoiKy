<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/btnMenu"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:src="@drawable/logo" />

            <ImageView
                android:src="@android:drawable/ic_menu_search"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
        </RelativeLayout>

        <TextView
            android:text="QUẢN LÝ LỚP HỌC"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_brown"
            android:shadowColor="#888"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView android:id="@+id/tabNgay" android:clickable="true"
                    android:text="Theo Ngày" android:textColor="#000"
                    android:textStyle="bold"
                    android:background="@drawable/bg_btn_pink"
                    android:gravity="center" android:padding="8dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
                <TextView android:id="@+id/tabTuan" android:clickable="true"
                    android:text="Theo Tuần" android:textColor="#555"
                    android:background="@drawable/bg_btn_grey"
                    android:gravity="center" android:padding="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
                <TextView android:id="@+id/tabThang" android:clickable="true"
                    android:text="Theo Tháng" android:textColor="#555"
                    android:background="@drawable/bg_btn_grey" android:gravity="center"
                    android:padding="8dp" android:layout_marginLeft="8dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
                <TextView android:id="@+id/tabNam" android:clickable="true" android:text="Theo Năm" android:textColor="#555" android:background="@drawable/bg_btn_grey" android:gravity="center" android:padding="8dp"
                    android:layout_marginLeft="8dp" android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/btnLui"
                android:clickable="true"
                android:text="&lt; Lùi"
                android:textColor="@color/status_red"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/btnTiep"
                android:clickable="true"
                android:text="Tiếp &gt;"
                android:textColor="@color/status_red"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="end"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvHienThiThoiGian"
            android:text="Thứ Bảy, 25/10/2025"
            android:background="@drawable/bg_btn_pink"
            android:backgroundTint="@color/status_red"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/containerListClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_main"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1.8"
                android:background="@drawable/bg_btn_pink"
                android:text="+ Thêm lớp học mới"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_green"
                android:backgroundTint="#66BB6A"
                android:text="Lưu"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_green"
                android:backgroundTint="#C5E1A5"
                android:text="Xóa"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_grey"
                android:text="Hủy"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="12sp" />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_input_field"
            android:hint="Tên lớp học"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_input_field"
            android:hint="Tên giảng viên"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input_field"
                android:hint="Khóa học"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="12sp" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1.2"
                android:background="@drawable/bg_input_field">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginLeft="12dp"
                    android:text="Phòng"
                    android:textColor="#888"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginRight="8dp"
                    android:alpha="0.3"
                    android:src="@android:drawable/arrow_down_float" />
            </FrameLayout>

            <EditText
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input_field"
                android:hint="Thời gian"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>