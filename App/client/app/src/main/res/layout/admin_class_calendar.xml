<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen"
    android:orientation="vertical"
    android:padding="16dp"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:focusable="true"
                android:src="@android:drawable/ic_menu_sort_by_size" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:src="@drawable/logo" />

            <ImageView
                android:id="@+id/btnSearch"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_menu_search" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:shadowColor="#888"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="QUẢN LÝ LỚP HỌC"
            android:textColor="@color/text_brown"
            android:textSize="24sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tabNgay"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_pink"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Theo Ngày"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tabTuan"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bg_btn_grey"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Theo Tuần"
                    android:textColor="#555" />

                <TextView
                    android:id="@+id/tabThang"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bg_btn_grey"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Theo Tháng"
                    android:textColor="#555" />

                <TextView
                    android:id="@+id/tabNam"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bg_btn_grey"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Theo Năm"
                    android:textColor="#555" />
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnLui"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:text="&lt; Lùi"
                android:textColor="@color/status_red"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnTiep"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="end"
                android:text="Tiếp &gt;"
                android:textColor="@color/status_red"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvHienThiThoiGian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_btn_pink"
            android:backgroundTint="@color/status_red"
            android:gravity="center"
            android:padding="8dp"
            android:text="Thứ Bảy, 25/10/2025"
            android:textColor="#FFF"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvListClass"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="#FAFAFA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_main"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnThem"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1.5"
                android:background="@drawable/bg_btn_pink"
                android:text="+ Thêm Mới"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLuu"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_green"
                android:backgroundTint="#66BB6A"
                android:text="Lưu"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnXoa"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_green"
                android:backgroundTint="#C5E1A5"
                android:text="Xóa"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="12sp"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnHuy"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_grey"
                android:text="Hủy"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtMaMon"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input_field"
                android:hint="Mã môn (INT1332)"
                android:inputType="textCapCharacters"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edtMaLop"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input_field"
                android:hint="Mã lớp (D19CN1)"
                android:inputType="textCapCharacters"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="13sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/edtGiangVien"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_input_field"
            android:hint="Tên giảng viên (VD: Nguyễn Văn A)"
            android:inputType="textPersonName|textCapWords"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input_field">

                <Spinner
                    android:id="@+id/spnThu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginRight="8dp"
                    android:alpha="0.3"
                    android:src="@android:drawable/arrow_down_float" />
            </FrameLayout>

            <EditText
                android:id="@+id/edtPhong"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input_field"
                android:hint="Phòng (A205)"
                android:inputType="textCapCharacters"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvGioBatDau"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input_field"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:hint="Giờ bắt đầu"
                android:paddingStart="12dp"
                android:drawableStart="@android:drawable/ic_menu_recent_history"
                android:drawablePadding="8dp"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvGioKetThuc"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input_field"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:hint="Giờ kết thúc"
                android:paddingStart="12dp"
                android:drawableStart="@android:drawable/ic_menu_recent_history"
                android:drawablePadding="8dp"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>