<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:padding="20dp">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/tvInstruction"
        android:text="Hãy cho chúng tôi biết trải nghiệm của bạn"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvCourseName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Khoá học : Lập trình di động"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvInstruction"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvTeacher"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Giảng viên : Đỗ Phú Huy"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvCourseName"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/ratingLayout"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvTeacher"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Mức độ đánh giá"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="5"
            android:rating="5"
            android:theme="@style/Widget.AppCompat.RatingBar.Indicator"/>
    </LinearLayout>

    <TextView
        android:text="Nhận xét về khoá học"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ratingLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etComment"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="#D1C4E9"
        android:gravity="top|start"
        android:padding="10dp"
        android:layout_marginTop="50dp"

        android:hint="Nhập nhận xét của bạn vào đây..."
        android:importantForAutofill="no"
        android:inputType="textMultiLine"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@id/ratingLayout"/>
    <Button
        android:id="@+id/btnCancel"
        android:text="Huỷ"
        android:backgroundTint="@color/btn_cancel"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@id/etComment"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnSend"
        android:text="Gửi"
        android:backgroundTint="@color/btn_green"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/etComment"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>