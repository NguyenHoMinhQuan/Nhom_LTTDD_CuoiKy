<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <ImageView
                android:id="@+id/btnMenu"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@drawable/logo" />

            <ImageView
                android:src="@android:drawable/ic_menu_search"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUẢN LÝ NGƯỜI DÙNG"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_brown"
            android:shadowColor="#888"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:layout_marginBottom="20dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:padding="2dp"
            android:scrollbars="vertical">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TableRow>
                        <TextView android:text="ID" android:textStyle="bold" android:gravity="center" android:padding="10dp" android:textColor="#000" android:background="@drawable/bg_table_cell"
                            android:layout_width="70dp" android:minHeight="55dp"/>

                        <TextView android:text="Họ tên" android:textStyle="bold" android:gravity="center" android:padding="10dp" android:textColor="#000" android:background="@drawable/bg_table_cell"
                            android:layout_width="250dp" android:minHeight="55dp"/>

                        <TextView android:text="Email" android:textStyle="bold" android:gravity="center" android:padding="10dp" android:textColor="#000" android:background="@drawable/bg_table_cell"
                            android:layout_width="280dp" android:minHeight="55dp"/>

                        <TextView android:text="Bộ môn" android:textStyle="bold" android:gravity="center" android:padding="10dp" android:textColor="#000" android:background="@drawable/bg_table_cell"
                            android:layout_width="180dp" android:minHeight="55dp"/>

                        <TextView android:text="TT" android:textStyle="bold" android:gravity="center" android:padding="10dp" android:textColor="#000" android:background="@drawable/bg_table_cell"
                            android:layout_width="70dp" android:minHeight="55dp"/>
                    </TableRow>

                    <TableRow>
                        <TextView android:background="@drawable/bg_table_cell" android:layout_width="70dp" android:minHeight="55dp"/>
                        <TextView android:background="@drawable/bg_table_cell" android:layout_width="250dp" android:minHeight="55dp"/>
                        <TextView android:background="@drawable/bg_table_cell" android:layout_width="280dp" android:minHeight="55dp"/>
                        <TextView android:background="@drawable/bg_table_cell" android:layout_width="180dp" android:minHeight="55dp"/>
                        <FrameLayout android:background="@drawable/bg_table_cell" android:layout_width="70dp" android:minHeight="55dp">
                            <View android:layout_width="18dp" android:layout_height="18dp" android:background="@drawable/bg_btn_pink" android:backgroundTint="@color/status_red" android:layout_gravity="center"/>
                        </FrameLayout>
                    </TableRow>

                    <TableRow>
                        <TextView android:background="@drawable/bg_table_cell" android:layout_width="70dp" android:minHeight="55dp"/>
                        <TextView android:background="@drawable/bg_table_cell" android:layout_width="250dp" android:minHeight="55dp"/>
                        <TextView android:background="@drawable/bg_table_cell" android:layout_width="280dp" android:minHeight="55dp"/>
                        <TextView android:background="@drawable/bg_table_cell" android:layout_width="180dp" android:minHeight="55dp"/>
                        <FrameLayout android:background="@drawable/bg_table_cell" android:layout_width="70dp" android:minHeight="55dp">
                            <View android:layout_width="18dp" android:layout_height="18dp" android:background="@drawable/bg_btn_pink" android:backgroundTint="@color/status_yellow" android:layout_gravity="center"/>
                        </FrameLayout>
                    </TableRow>

                    <TableRow>
                        <TextView android:background="@drawable/bg_table_cell" android:layout_width="70dp" android:minHeight="55dp"/>
                        <TextView android:background="@drawable/bg_table_cell" android:layout_width="250dp" android:minHeight="55dp"/>
                        <TextView android:background="@drawable/bg_table_cell" android:layout_width="280dp" android:minHeight="55dp"/>
                        <TextView android:background="@drawable/bg_table_cell" android:layout_width="180dp" android:minHeight="55dp"/>
                        <FrameLayout android:background="@drawable/bg_table_cell" android:layout_width="70dp" android:minHeight="55dp">
                            <View android:layout_width="18dp" android:layout_height="18dp" android:background="@drawable/bg_btn_pink" android:backgroundTint="@color/status_green" android:layout_gravity="center"/>
                        </FrameLayout>
                    </TableRow>

                    <TableRow>
                        <TextView android:background="@drawable/bg_table_cell" android:layout_width="70dp" android:minHeight="55dp"/>
                        <TextView android:background="@drawable/bg_table_cell" android:layout_width="250dp" android:minHeight="55dp"/>
                        <TextView android:background="@drawable/bg_table_cell" android:layout_width="280dp" android:minHeight="55dp"/>
                        <TextView android:background="@drawable/bg_table_cell" android:layout_width="180dp" android:minHeight="55dp"/>
                        <FrameLayout android:background="@drawable/bg_table_cell" android:layout_width="70dp" android:minHeight="55dp">
                            <View android:layout_width="18dp" android:layout_height="18dp" android:background="@drawable/bg_btn_pink" android:backgroundTint="@color/status_green" android:layout_gravity="center"/>
                        </FrameLayout>
                    </TableRow>

                    <TableRow>
                        <TextView android:background="@drawable/bg_table_cell" android:layout_width="70dp" android:minHeight="55dp"/>
                        <TextView android:background="@drawable/bg_table_cell" android:layout_width="250dp" android:minHeight="55dp"/>
                        <TextView android:background="@drawable/bg_table_cell" android:layout_width="280dp" android:minHeight="55dp"/>
                        <TextView android:background="@drawable/bg_table_cell" android:layout_width="180dp" android:minHeight="55dp"/>
                        <FrameLayout android:background="@drawable/bg_table_cell" android:layout_width="70dp" android:minHeight="55dp">
                            <View android:layout_width="18dp" android:layout_height="18dp" android:background="@drawable/bg_btn_pink" android:backgroundTint="@color/status_yellow" android:layout_gravity="center"/>
                        </FrameLayout>
                    </TableRow>

                </TableLayout>
            </HorizontalScrollView>
        </ScrollView>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton android:text="+ Thêm người dùng mới" android:textAllCaps="false" android:background="@drawable/bg_btn_pink" android:textColor="#000" android:layout_weight="2" android:layout_width="0dp" android:layout_height="45dp"/>
            <androidx.appcompat.widget.AppCompatButton android:text="Xóa" android:textAllCaps="false" android:layout_marginLeft="10dp" android:background="@drawable/bg_btn_green" android:textColor="#000" android:layout_weight="1" android:layout_width="0dp" android:layout_height="45dp"/>
        </LinearLayout>

        <EditText android:hint="Họ tên" android:background="@drawable/bg_input_field" android:paddingStart="15dp" android:paddingEnd="15dp" android:layout_marginBottom="10dp" android:layout_width="match_parent" android:layout_height="45dp"/>
        <EditText android:hint="Email" android:background="@drawable/bg_input_field" android:paddingStart="15dp" android:paddingEnd="15dp" android:layout_marginBottom="10dp" android:layout_width="match_parent" android:layout_height="45dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout android:background="@drawable/bg_input_field" android:layout_weight="1" android:layout_width="0dp" android:layout_height="45dp">
                <Spinner android:layout_width="match_parent" android:layout_height="match_parent" android:paddingStart="10dp"/>
                <TextView android:text="Trạng thái" android:textColor="#888"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView android:src="@android:drawable/arrow_down_float" android:layout_gravity="center_vertical|end" android:layout_marginRight="10dp" android:layout_width="20dp" android:layout_height="20dp" android:alpha="0.3"/>
            </FrameLayout>
            <FrameLayout android:layout_marginLeft="10dp" android:background="@drawable/bg_input_field" android:layout_weight="1" android:layout_width="0dp" android:layout_height="45dp">
                <Spinner android:layout_width="match_parent" android:layout_height="match_parent" android:paddingStart="10dp"/>
                <TextView android:text="Bộ môn" android:textColor="#888"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView android:src="@android:drawable/arrow_down_float" android:layout_gravity="center_vertical|end" android:layout_marginRight="10dp" android:layout_width="20dp" android:layout_height="20dp" android:alpha="0.3"/>
            </FrameLayout>
        </LinearLayout>

        <EditText android:hint="Mật khẩu" android:background="@drawable/bg_input_field" android:paddingStart="15dp" android:paddingEnd="15dp" android:layout_marginBottom="10dp" android:layout_width="match_parent" android:layout_height="45dp"/>
        <EditText android:hint="Xác nhận mật khẩu" android:background="@drawable/bg_input_field" android:paddingStart="15dp" android:paddingEnd="15dp" android:layout_marginBottom="15dp" android:layout_width="match_parent" android:layout_height="45dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton android:text="Lưu thay đổi" android:textAllCaps="false" android:background="@drawable/bg_btn_green" android:textColor="#000" android:layout_weight="1" android:layout_width="0dp" android:layout_height="45dp"/>
            <androidx.appcompat.widget.AppCompatButton android:text="Hủy bỏ" android:textAllCaps="false" android:background="@drawable/bg_btn_grey" android:textColor="#000" android:layout_marginLeft="15dp" android:layout_weight="1" android:layout_width="0dp" android:layout_height="45dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>