<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:text="HỆ THỐNG QUẢN LÝ"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#5D4037"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Xin chào, Admin!"
        android:textSize="16sp"
        android:textColor="#757575"
        android:layout_marginBottom="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/btnGoToUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_border"
        android:backgroundTint="#FFE0E9"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:layout_marginBottom="15dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView android:src="@android:drawable/ic_menu_myplaces" android:layout_width="40dp" android:layout_height="40dp"/>

        <LinearLayout android:orientation="vertical" android:layout_marginLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:text="Quản lý Người dùng" android:textStyle="bold" android:textSize="18sp" android:textColor="#5D4037" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:text="Giảng viên, Sinh viên..." android:textSize="12sp" android:textColor="#757575" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnGoToCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_border"
        android:backgroundTint="#C8E6C9"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:layout_marginBottom="15dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView android:src="@android:drawable/ic_menu_agenda" android:layout_width="40dp" android:layout_height="40dp"/>

        <LinearLayout android:orientation="vertical" android:layout_marginLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:text="Quản lý Khóa học" android:textStyle="bold" android:textSize="18sp" android:textColor="#5D4037" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:text="Danh sách các môn học" android:textSize="12sp" android:textColor="#757575" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnGoToClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_border"
        android:backgroundTint="#B3E5FC"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView android:src="@android:drawable/ic_menu_today" android:layout_width="40dp" android:layout_height="40dp"/>

        <LinearLayout android:orientation="vertical" android:layout_marginLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:text="Quản lý Lớp học" android:textStyle="bold" android:textSize="18sp" android:textColor="#5D4037" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:text="Xem lịch học và phòng" android:textSize="12sp" android:textColor="#757575" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:text="Đăng xuất"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_btn_grey"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>