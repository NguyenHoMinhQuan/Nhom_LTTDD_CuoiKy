<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tvCourseId"
        android:layout_width="70dp"
        android:minHeight="50dp"
        android:text="1"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="#000"
        android:background="@drawable/bg_table_cell"/>

    <TextView
        android:id="@+id/tvCourseName"
        android:layout_width="250dp"
        android:minHeight="50dp"
        android:text="Tên Khóa Học"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="#000"
        android:background="@drawable/bg_table_cell"/>

    <TextView
        android:id="@+id/tvLecturer"
        android:layout_width="200dp"
        android:minHeight="50dp"
        android:text="Tên Giảng Viên"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="#000"
        android:background="@drawable/bg_table_cell"/>

    <TextView
        android:id="@+id/tvStudentCount"
        android:layout_width="90dp"
        android:minHeight="50dp"
        android:text="0"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="#000"
        android:background="@drawable/bg_table_cell"/>

    <FrameLayout
        android:layout_width="70dp"
        android:minHeight="50dp"
        android:background="@drawable/bg_table_cell">

        <View
            android:id="@+id/viewStatusColor"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_btn_pink"/>
    </FrameLayout>

</TableRow>