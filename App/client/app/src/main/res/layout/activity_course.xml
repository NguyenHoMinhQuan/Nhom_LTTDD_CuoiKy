<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <ImageView
                android:id="@+id/btnMenu"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@drawable/logo" />

            <ImageView
                android:src="@android:drawable/ic_menu_search"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUẢN LÝ KHÓA HỌC"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_brown"
            android:shadowColor="#888"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:layout_marginBottom="15dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="329dp"
            android:layout_marginBottom="15dp"
            android:padding="2dp"
            android:scrollbars="vertical">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TableRow>
                        <TextView
                            android:layout_width="70dp"
                            android:background="@drawable/bg_table_cell"
                            android:gravity="center"
                            android:lines="2"
                            android:minHeight="50dp"
                            android:padding="5dp"
                            android:text="ID"
                            android:textColor="#000"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="250dp"
                            android:background="@drawable/bg_table_cell"
                            android:gravity="center"
                            android:lines="2"
                            android:minHeight="50dp"
                            android:padding="5dp"
                            android:text="Tên Khóa Học"
                            android:textColor="#000"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="200dp"
                            android:background="@drawable/bg_table_cell"
                            android:gravity="center"
                            android:lines="2"
                            android:minHeight="50dp"
                            android:padding="5dp"
                            android:text="Giảng Viên"
                            android:textColor="#000"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="90dp"
                            android:background="@drawable/bg_table_cell"
                            android:gravity="center"
                            android:lines="2"
                            android:minHeight="50dp"
                            android:padding="5dp"
                            android:text="Học Viên"
                            android:textColor="#000"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="70dp"
                            android:background="@drawable/bg_table_cell"
                            android:gravity="center"
                            android:lines="2"
                            android:minHeight="50dp"
                            android:padding="5dp"
                            android:text="TT"
                            android:textColor="#000"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow>
                        <TextView android:layout_width="70dp" android:background="@drawable/bg_table_cell" android:minHeight="50dp" />

                        <TextView android:layout_width="250dp" android:background="@drawable/bg_table_cell" android:minHeight="50dp" />

                        <TextView android:layout_width="200dp" android:background="@drawable/bg_table_cell" android:minHeight="50dp" />

                        <TextView android:layout_width="90dp" android:background="@drawable/bg_table_cell" android:minHeight="50dp" />
                        <FrameLayout android:layout_width="70dp" android:background="@drawable/bg_table_cell" android:minHeight="50dp">
                            <View android:layout_width="16dp" android:layout_height="16dp" android:layout_gravity="center" android:background="@drawable/bg_btn_pink" android:backgroundTint="@color/status_green" />
                        </FrameLayout>
                    </TableRow>

                    <TableRow>
                        <TextView android:layout_width="70dp" android:background="@drawable/bg_table_cell" android:minHeight="50dp" />
                        <TextView android:layout_width="250dp" android:background="@drawable/bg_table_cell" android:minHeight="50dp" />
                        <TextView android:layout_width="200dp" android:background="@drawable/bg_table_cell" android:minHeight="50dp" />
                        <TextView android:layout_width="90dp" android:background="@drawable/bg_table_cell" android:minHeight="50dp" />
                        <FrameLayout android:layout_width="70dp" android:background="@drawable/bg_table_cell" android:minHeight="50dp">
                            <View android:layout_width="16dp" android:layout_height="16dp" android:layout_gravity="center" android:background="@drawable/bg_btn_pink" android:backgroundTint="@color/status_red" />
                        </FrameLayout>
                    </TableRow>

                    <TableRow>
                        <TextView android:layout_width="70dp" android:background="@drawable/bg_table_cell" android:minHeight="50dp" />
                        <TextView android:layout_width="250dp" android:background="@drawable/bg_table_cell" android:minHeight="50dp" />
                        <TextView android:layout_width="200dp" android:background="@drawable/bg_table_cell" android:minHeight="50dp" />
                        <TextView android:layout_width="90dp" android:background="@drawable/bg_table_cell" android:minHeight="50dp" />
                        <FrameLayout android:layout_width="70dp" android:background="@drawable/bg_table_cell" android:minHeight="50dp">
                            <View android:layout_width="16dp" android:layout_height="16dp" android:layout_gravity="center" android:background="@drawable/bg_btn_pink" android:backgroundTint="@color/status_yellow" />
                        </FrameLayout>
                    </TableRow>

                    <TableRow>
                        <TextView android:layout_width="70dp" android:background="@drawable/bg_table_cell" android:minHeight="50dp" />
                        <TextView android:layout_width="250dp" android:background="@drawable/bg_table_cell" android:minHeight="50dp" />
                        <TextView android:layout_width="200dp" android:background="@drawable/bg_table_cell" android:minHeight="50dp" />
                        <TextView android:layout_width="90dp" android:background="@drawable/bg_table_cell" android:minHeight="50dp" />
                        <FrameLayout android:layout_width="70dp" android:background="@drawable/bg_table_cell" android:minHeight="50dp">
                            <View android:layout_width="16dp" android:layout_height="16dp" android:layout_gravity="center" android:background="@drawable/bg_btn_pink" android:backgroundTint="@color/status_green" />
                        </FrameLayout>
                    </TableRow>

                    <TableRow>
                        <TextView android:layout_width="70dp" android:background="@drawable/bg_table_cell" android:minHeight="50dp" />
                        <TextView android:layout_width="250dp" android:background="@drawable/bg_table_cell" android:minHeight="50dp" />
                        <TextView android:layout_width="200dp" android:background="@drawable/bg_table_cell" android:minHeight="50dp" />
                        <TextView android:layout_width="90dp" android:background="@drawable/bg_table_cell" android:minHeight="50dp" />
                        <FrameLayout android:layout_width="70dp" android:background="@drawable/bg_table_cell" android:minHeight="50dp">
                            <View android:layout_width="16dp" android:layout_height="16dp" android:layout_gravity="center" android:background="@drawable/bg_btn_pink" android:backgroundTint="@color/status_red" />
                        </FrameLayout>
                    </TableRow>

                </TableLayout>
            </HorizontalScrollView>
        </ScrollView>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:text="+ Thêm khóa học mới"
                android:textAllCaps="false"
                android:textSize="11sp"
                android:background="@drawable/bg_btn_pink"
                android:textColor="#000"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="40dp"/> <androidx.appcompat.widget.AppCompatButton
            android:text="Xóa"
            android:textAllCaps="false"
            android:textSize="11sp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_btn_green"
            android:textColor="#000"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"/> </LinearLayout>

        <EditText
            android:hint="Tên khóa học"
            android:textSize="13sp"
            android:background="@drawable/bg_input_field"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/> <EditText
        android:hint="Giảng viên phụ trách"
        android:textSize="13sp"
        android:background="@drawable/bg_input_field"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:background="@drawable/bg_input_field"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"> <Spinner android:layout_width="match_parent" android:layout_height="match_parent" android:paddingStart="10dp"/>
                <TextView android:text="Trạng thái" android:textSize="13sp"
                    android:textColor="#888"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView android:src="@android:drawable/arrow_down_float" android:layout_gravity="center_vertical|end" android:layout_marginRight="10dp" android:layout_width="20dp" android:layout_height="20dp" android:alpha="0.3"/>
            </FrameLayout>

            <EditText
                android:hint="Số lượng HV"
                android:textSize="13sp"
                android:background="@drawable/bg_input_field"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
        </LinearLayout>

        <EditText
            android:hint="Mô tả khóa học"
            android:textSize="13sp"
            android:background="@drawable/bg_input_field"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:text="Lưu thay đổi"
                android:textAllCaps="false"
                android:textSize="11sp"
                android:background="@drawable/bg_btn_green"
                android:textColor="#000"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:text="Hủy bỏ"
                android:textAllCaps="false"
                android:textSize="11sp"
                android:background="@drawable/bg_btn_grey"
                android:textColor="#000"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>