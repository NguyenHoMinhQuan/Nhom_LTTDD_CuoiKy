<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_agenda"
            app:tint="#0D47A1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xin Chào\nHữu Thuận"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/ivLogo"
            app:layout_constraintStart_toEndOf="@id/ivLogo"
            app:layout_constraintTop_toTopOf="@id/ivLogo"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:drawable/btn_default_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvLabelScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Điểm"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivLogo"/>

        <TextView
            android:id="@+id/tvStudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Nguyễn Lê Hữu Thuận"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLabelScore"/>

        <TextView
            android:id="@+id/tvStudentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Mã sv : 23115053122142"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvStudentName"/>

        <TextView
            android:id="@+id/tvSubjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Lập trình java"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvStudentId"/>

        <TableLayout
            android:id="@+id/tableScores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:stretchColumns="0"
            app:layout_constraintTop_toBottomOf="@id/tvSubjectName">

            <TableRow>
                <TextView
                    android:text="Các cột điểm"
                    android:background="@drawable/bg_table_cell"
                    android:textColor="#000000"
                    android:padding="10dp"/>
                <TextView
                    android:text="Điểm"
                    android:background="@drawable/bg_table_cell"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:gravity="center"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Bài tập 1"
                    android:background="@drawable/bg_table_cell"
                    android:textColor="#000000"
                    android:padding="10dp"/>
                <TextView
                    android:text=""
                    android:background="@drawable/bg_table_cell"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:minWidth="60dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Bài tập 2"
                    android:background="@drawable/bg_table_cell"
                    android:textColor="#000000"
                    android:padding="10dp"/>
                <TextView
                    android:text=""
                    android:background="@drawable/bg_table_cell"
                    android:padding="10dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Bài tập 3"
                    android:background="@drawable/bg_table_cell"
                    android:textColor="#000000"
                    android:padding="10dp"/>
                <TextView
                    android:text=""
                    android:background="@drawable/bg_table_cell"
                    android:padding="10dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Bài tập giữa kì"
                    android:background="@drawable/bg_table_cell"
                    android:textColor="#000000"
                    android:padding="10dp"/>
                <TextView
                    android:text=""
                    android:background="@drawable/bg_table_cell"
                    android:padding="10dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Bài tập cuối kì"
                    android:background="@drawable/bg_table_cell"
                    android:textColor="#000000"
                    android:padding="10dp"/>
                <TextView
                    android:text=""
                    android:background="@drawable/bg_table_cell"
                    android:padding="10dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Tổng điểm"
                    android:background="@drawable/bg_table_cell"
                    android:textColor="#000000"
                    android:padding="10dp"/>
                <TextView
                    android:text=""
                    android:background="@drawable/bg_table_cell"
                    android:padding="10dp"/>
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/tvProgressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Mức độ hoàn thành : 45 %"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tableScores"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginTop="8dp"
            android:progress="45"
            android:progressDrawable="@drawable/hocvien_custom_progress_bar"
            app:layout_constraintTop_toBottomOf="@id/tvProgressLabel"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>